<div class="contactbkg">
  <div class="container">
    <div class="sub_title col-sm-5 col-sm-offset-1">
      <h2>now tell us about you...</h2>
    </div>
    <div class="row">

      <div class="wrapper col-sm-5">
        <div class="contact col-sm-12">
          <!--           <div class="col-sm-2 col-sm-offset-5">
 -->
          <form action="/receipt" method="POST" role="form">
            <div class="form-group">
              <label for="name">Your name:</label>
              <input class="form-control" id="name" name="name" type="name" value="<%=username%>">
            </div>
            <div class="form-group">
              <label for="email">Email address:</label>
              <input class="form-control" id="email" name="email" type="email">
            </div>
            <div class="form-group">
              <label for="number">Phone number:</label>
              <input class="form-control" id="number" name="number" type="number">
            </div>
            <div class="form-group">
              <label for="location">Your vacation spot:</label>
              <input class="form-control" id="location" name="location" type="location">
            </div>
            <div class="form-group">
              <label for="wanted">Comments, questions, complaints:</label>
              <textarea class="form-control" id="wanted" name="wanted" rows=4 type="wanted"></textarea>
            </div>
            <button class="btn btn-default" type="submit">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
